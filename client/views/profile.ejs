<html>
<head>
	<title></title>
	<meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  <link href="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0/css/select2.min.css" rel="stylesheet" />
  <script src="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0/js/select2.min.js"></script>

  <script type="text/javascript">
  $(document).ready(function() {
    $(".js-example-basic-single").select2();

  });
  </script>
  <style type="text/css">

  .name{
    font-size: 60px;
 }
 .cohort{
  font-size: 25px;
}
.shistory{
  height: 300px;
  width: 1100px;
  overflow-y: scroll;
}
.dhistory{
  height: 300px;
  width: 1100px;
  overflow-y: scroll;
}
.green{
  background-color: green;
}
#link{
  display: inline-block;
  vertical-align: top;
  margin: 5px;
  width: 350px;
  padding: 15px;
  font-size: 20px;
  color: white;

}
select{
  width:100%;
  height: 40px;
}
#des{

  display:inline-block;
  vertical-align: top;
  position:absolute;
  margin-left: 30px;


}
.findForm{
  border: 2px solid black;
  border-radius: 15px;
  padding: 20px;
  height: 360px;
  width: 360px;
  display: inline-block;
  vertical-align: top;
}
.find{
  text-align: center;
  margin-bottom: 100px
}
.formy{
  margin: 25px;
}






</style>
</head>
<body>
  <div class="container">
    <div class="row">
     <div class="col-md-6">

      <div class="panel panel-default">
       <div class="panel-body">
        <div class="row">
          <div class="col-xs-12 col-sm-8">
            <h2 class = 'name'><%=x.name %> <div id = 'des' class = 'btn'> <a href="/<%=x._id%>/destroy"> Delete User</a> </div></h2>

            <p class = 'cohort'><strong></strong> <%= x.cohort %></p>

          </div><!--/col-->          
          <div class="col-xs-12 col-sm-4 text-center">
            <img src="http://naturalhistory.ku.edu/sites/all/themes/bootstrap/bootstrap_biotheme/img/person-image-not-available_6.png" alt="" class="center-block img-circle img-responsive">
            <ul class="list-inline ratings text-center" title="Ratings">
              <li><a href="#"><span class="fa fa-star fa-lg"></span></a></li>
              <li><a href="#"><span class="fa fa-star fa-lg"></span></a></li>
              <li><a href="#"><span class="fa fa-star fa-lg"></span></a></li>
              <li><a href="#"><span class="fa fa-star fa-lg"></span></a></li>
              <li><a href="#"><span class="fa fa-star fa-lg"></span></a></li>
            </ul>
          </div><!--/col-->

          <div class="col-xs-12 col-sm-4">
            <h2><strong> <%= x.wins %>

            </strong></h2>                    
            <p><small>Wins</small></p>

          </div><!--/col-->
          <div class="col-xs-12 col-sm-4">
            <h2><strong><%= x.loses %></strong></h2>                    
            <p><small>Loses</small></p>

          </div><!--/col-->
          <div class="col-xs-12 col-sm-4">
            <h2><strong><%= x.rating %> </strong></h2>                    
            <p><small>Rating</small></p>

          </div><!--/col-->
          <div class="col-xs-12 col-sm-4">
            <h2><strong> <%= x.dwins %></strong></h2>                    
            <p><small>Double Wins</small></p>

          </div><!--/col-->
          <div class="col-xs-12 col-sm-4">
            <h2><strong><%= x.dloses %></strong></h2>                    
            <p><small>Doubles Loses</small></p>

          </div><!--/col-->
          <div class="col-xs-12 col-sm-4">
            <h2><strong><%= x.drating %> </strong></h2>                    
            <p><small>Doubles Rating</small></p>

          </div><!--/col-->


        </div><!--/row-->


      </div><!--/panel-body-->

    </div><!--/panel-->



  </div>
  <div class = 'findForm'>
    <h1 class = 'find'> Search Users </h1>
    <form method = 'post' action = '/search/user'>

      <p class = 'formy'> <select class = "js-example-basic-single" name = 'id'>
        <% console.log(everyone);
        for (var i = 0; i < everyone.length; i++) { %>
        <option value = "<%= everyone[i]._id %>"><%= everyone[i].name %> [<%= everyone[i].cohort %>]
        </option>
        <% } %>




      </select> </p>
      <p class = 'formy'> <input style = 'width: 100%' type = 'Submit' value = 'Search'></p>

    </form>
  </div>
  <div id = 'link' class = 'btn btn-success'> <a href="/"> Back to Ladder</a></div>

</div>

<div class = 'shistory'>
  <h1> Singles Match History </h1>
  <table class="table table-striped">
    <tbody class = 'smaller'>
      <thead>
        <tr>
          <th>Player1</th>
          <th>Player2</th>
          <th>Winner</th>
          <th>Date</th>
        </tr>
      </thead>

      <% 
      for (var i = 0; i < x.games.length; i++) { 

        if (x.games[i].type == "single"){
          %> 

          <tr class = "">
            <td><%= x.games[i].player1%></td>
            <td><%= x.games[i].player2%></td>
            <td><%= x.games[i].winner%></td>
            <td><%= x.games[i].date%></td>
          </tr>

          <% } }%>

        </tbody>
      </table>

    </div>
    <div class = 'dhistory'>
      <h1> Doubles Match History </h1>
      <table class="table table-striped">
        <tbody class = 'smaller'>
          <thead>
            <tr>
              <th>Team 1</th>
              <th>Team 2 </th>
              <th>Winners</th>
              <th>Date</th>
            </tr>
          </thead>

          <% for (var i = 0; i < x.games.length; i++) { 
            if (x.games.type != "single"){
              %> 

              <tr class = "">
                <td><%= x.games[i].player1%> + <%= x.games[i].player3%> </td>
                <td><%= x.games[i].player2%> + <%= x.games[i].player4%></td>
                <td><%= x.games[i].winners%></td>
                <td><%= x.games[i].date%></td>
              </tr>

              <% } }%>

            </tbody>
          </table>

        </div>
      </div>



    </body>
    </html>